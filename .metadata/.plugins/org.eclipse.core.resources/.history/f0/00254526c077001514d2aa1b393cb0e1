package first;

public class BirthDay {
	private int day;
	private int month;
	private int year;
	
	public BirthDay(int day, int month, int year) {
		this.day = day;
		this.month = month;
		this.year = year;
	}
	
	public int getDay() {
		return day;
	}
	
	public int getMonth() {
		return month;
	}
	
	public int getYear() {
		return year;
	}
	
	public boolean checkDay() {
		if(day >= 1 && day <= 31) {
			return true;
		}
		return false;
	}
	
	public boolean checkMonth() {
		if(month >= 1 && month <= 12) {
			return true;
		}
		return false;
	}
	
	public boolean checkYear() {
		if(year >= 0 && year <= 2015) {
			return true;
		}
		return false;
	}
	
	public boolean checkMonthyNumOfDay() {
		if()
	}
	
	public boolean checkLeapYear() {
		//윤년 : 4로 나누어지면서 100으로 나누어 떨어지지 않는 년
	}
	
	public boolean checkValidate() {
		return false;
	}
}



